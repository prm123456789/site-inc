<!-- views/post.ejs -->
<%- include("partials/header") %>

<div class="container">
  <h2>Publication</h2>
  <h3><%= post.clanName %></h3>
  <p><%= post.text %></p>
  <% if (post.image) { %>
    <img src="/uploads/<%= post.image %>" alt="Image" style="max-width:100%;">
  <% } %>
  <p>
    <button class="like-btn" onclick="likePost('<%= post._id %>')">â¤ï¸ J'aime</button>
    <span id="like-count-<%= post._id %>"><%= post.likes.length %></span> likes
  </p>
  <form method="POST" action="/post/<%= post._id %>/comment">
    <input type="text" name="comment" placeholder="Ajouter un commentaire..." required>
    <button type="submit">Commenter</button>
  </form>
  <div class="comment-section">
    <% post.comments.forEach(c => { %>
      <p>
        <strong><%= c.author %></strong>: <%= c.text %>
        <button onclick="deleteComment('<%= post._id %>','<%= c._id %>')">ğŸ—‘ï¸</button>
      </p>
    <% }) %>
  </div>
  <button onclick="deletePost('<%= post._id %>')">ğŸ—‘ï¸ Supprimer publication</button>
</div>

<%- include("partials/footer") %>
